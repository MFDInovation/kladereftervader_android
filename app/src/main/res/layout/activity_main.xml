<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huaxie.kladervader.MainActivity">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/base_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/base_background"
            android:scaleType="centerInside"
            android:adjustViewBounds="true" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/temp_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/temp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/temp_text_height"
                android:textColor="@color/white"
                android:shadowColor="@color/text_shadow_white"
                android:layout_centerVertical="true"
                android:textSize="@dimen/temp_text_size"
                android:textAlignment="center"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:layout_marginStart="@dimen/text_xxxxlarge_margin"/>

            <TextView
                style="@style/TextViewFont"
                android:id="@+id/egna_bilder_button"
                android:text="@string/egna_bilder"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/text_xlarge_margin"
                android:layout_marginEnd="@dimen/text_large_margin"/>

            <TextView
                android:id="@+id/demo_button"
                style="@style/TextViewFont"
                android:text = "@string/demo"
                android:layout_below="@+id/egna_bilder_button"
                android:layout_alignEnd="@+id/egna_bilder_button"
                android:layout_marginTop="@dimen/text_small_margin"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/animation_container"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/viewPager_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/temp_container"
            android:layout_alignParentBottom="true">

            <android.support.v4.view.ViewPager
                android:id="@+id/myViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                >

            </android.support.v4.view.ViewPager>

            <ImageView
                android:id="@+id/portrait_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/myViewPager"
                android:visibility="gone"/>

            <TextView
                android:text="@string/utv_dera_appen"
                style="@style/TextViewFont"
                android:id="@+id/evaluation_button"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/text_small_margin"/>

        </RelativeLayout>



    </android.support.percent.PercentRelativeLayout>


</RelativeLayout>
